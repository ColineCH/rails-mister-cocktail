<div class="banner padded">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="padded">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-4">
        <% if @cocktail.photo? %>
          <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
        <% end %>
        <ul class="list-unstyled">
          <% @cocktail.doses.each do |dose| %>
             <li><%= dose.description  %> of
                <%= dose.ingredient.name %>
                <%= link_to "Delete this dose", dose_path(dose), method: :delete, data: {confirm: "are you sure"}, class: "btn-medium" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<div>
<h4>Add a dose</h4>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
</div>
