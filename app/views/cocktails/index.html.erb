<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1>Our delicious cocktails of the week</h1>
      <h3 class="text-center"><%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-danger" %></h3>
      <ul>
      <% @cocktails.each do |cocktail| %>
        <li>
          <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
